{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pv-cephfs-server"
  },
  "spec": {
    "capacity": {
        "storage": "5Gi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "cephfs": {
        "monitors": ["#POD_IP#:6789"],
        "user": "admin",
        "secretRef": {
            "name": "cephfs-secret"
        },
        "secretFile": "/etc/ceph/admin.secret",
        "readOnly": false
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
