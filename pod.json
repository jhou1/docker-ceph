{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "cephfs",
        "labels": {
            "name": "cephfs"
        }
    },
    "spec": {
        "containers": [{
            "name": "cephfs",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "name": "cephfs",
                "mountPath": "/mnt/cephfs"
            }]
        }],
        "securityContext": {
            "runAsUser": 101010,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0:c13,c2"
            }
        },
        "volumes": [{
            "name": "cephfs",
            "persistentVolumeClaim": {
                "claimName": "pvc-cephfs-server"
            }
        }]
    }
}
