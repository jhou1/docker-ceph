{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "ceph-server"
    },
    "spec": {
        "containers": [
            {
                "name": "ceph-server",
                "image": "jhou/ceph",
                "securityContext": {
                    "privileged": true
                },
                "imagePullPolicy": "IfNotPresent"
            }
        ]
    }
}
