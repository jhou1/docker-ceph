{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "cephfs"
    },
    "spec": {
        "containers": [
            {
                "name": "cephfs",
                "image": "aosqe/hello-openshift",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/cephfs",
                        "name": "cephfs"
                    }
                ]
            }
        ],
        "securityContext": {
            "runAsUser": 1000160000,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0"
            }
        },
        "volumes": [
            {
                "name": "cephfs",
                "cephfs": {
                    "monitors": ["#POD_IP#:6789"],
                    "user": "kube",
                    "secretRef": {
                        "name": "cephfs-secret"
                    },
                    "secretFile": "/etc/ceph/admin.secret",
                    "readOnly": false
                }
            }
        ]
    }
}
